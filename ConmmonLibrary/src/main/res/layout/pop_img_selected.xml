<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00FFFFFF"
                android:orientation="vertical">

    <LinearLayout
        android:id="@+id/pop_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_pop_half_transparent"
        android:orientation="vertical"
        android:padding="@dimen/x25">

        <Button
            android:id="@+id/pop_bt_take_photo"
            style="@style/pop_img_select_button"
            android:text="@string/str_take_photo"/>

        <Button
            android:id="@+id/pop_bt_pick_photo"
            style="@style/pop_img_select_button"
            android:layout_marginTop="@dimen/dp_15"
            android:text="@string/str_pick_photo"/>

        <Button
            android:id="@+id/pop_bt_cancel"
            style="@style/pop_img_select_button"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/bg_button_cancel"
            android:text="@string/str_cancel"/>

    </LinearLayout>

</RelativeLayout>